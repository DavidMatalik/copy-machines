extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Item name:
      input#name.form-control(type='text', name='name' value=(undefined===item ? '' : item.name))
    div.form-group
      label(for='description') Item description:
      input#description.form-control(type='text', name='description' value=(undefined===item ? '' : item.description))
    div.form-group
      label(for='brand') Item brand:
      select#brand.form-control(type='select', placeholder='Select brand' name='brand' required='true' )
        for brand in brands
          if item
            option(value=brand._id selected=(brand._id.toString()===item.brand._id.toString() ? 'selected' : false) ) #{brand.name}
          else
            option(value=brand._id) #{brand.name}
    div.form-group
      label(for='price') Item price:
      input#price.form-control(type='number', name='price' value=(undefined===item ? '' : item.price))
    div.form-group
      label(for='numberInStock') Item number in stock:
      input#numberInStock.form-control(type='number', name='numberInStock' value=(undefined===item ? '' : item.numberInStock))
    div.form-group
      label(for='colorPrint') Item can print color:
      input#colorPrint.form-control(type='checkbox', name='colorPrint' checked=(item && item.colorPrint))

    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg

extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Brand name:
      input#name.form-control(type='text', placeholder='KM, Canon, HP, etc.' name='name' value=(undefined===brand ? '' : brand.name))
    div.form-group
      label(for='description') Brand description:
      input#description.form-control(type='text', name='description' value=(undefined===brand ? '' : brand.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg

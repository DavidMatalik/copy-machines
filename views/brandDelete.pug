extends layout

block content
  h1 #{title}: #{brand.name}

  if brandItems.length

    p #[strong Delete the following items before attempting to delete this brand.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each item in brandItems
        dt
          a(href=item.url) #{item.name}
        dd #{item.description || 'No description'}

  else
    p Do you really want to delete this Brand?

    form(method='POST' action='')
      div.form-group
        input#brandid.form-control(type='hidden',name='brandid', required='true', value=brand._id)
      div.form-group
        label(for='password') Enter password for Deletion:
        input#password.form-control(type='password', name='password')

      button.btn.btn-primary(type='submit') Delete
      
  if errors
   ul
    for error in errors
     li!= error.msg
